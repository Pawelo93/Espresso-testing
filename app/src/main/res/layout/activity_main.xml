<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity">

    <Button
            android:id="@+id/simpleAsyncButton"
            android:text="Start Simple Async Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/apiRequestButton"
            android:text="Start Api Request Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/openActivityButton"
            android:text="Start OpenActivity Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>